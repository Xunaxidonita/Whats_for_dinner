<article class="post">
<div class="title">
<h1 class="recipe-title">
    {{this.title}}
</h1>
</div>
<div class="subtitle">
    Submitted by {{this.username}} on {{this.created_at}}
</div>

<div class="description">
  {{ this.description }}
</div>

<div class="meta">
    <a href="/post/{{this.id}}">{{this.comments.length}} {{format_plural "comment" this.comments.length}}</a>
  </div>

</div>
</article>