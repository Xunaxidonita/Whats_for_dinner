<ol class="recipe-list">
    {{#each recipes as |recipe|}}
    <li>
        <article class="recipe">
            <div class="title">
                <a href="{{recipe.recipe_url}}" target="_blank">{{recipe.title}}</a>
                by {{recipe.user.username}} on {{recipe.created_at}}
        
            </div>
            <div class="meta">
               
                <a href="/recipe/{{id}}">{{recipe.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
    </ol>