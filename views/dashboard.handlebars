<section class="recipe-post">
    <div class="add-recipe">
        <h2>Add A New Recipe</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="title"/>
        </div>
        <div>
            <label for="post-ingredients">Category</label>
            <select name="categories" id="category_selector">
                {{#each categories}}
                <option value="{{category.id}}" name="category_id">{{category.category_name}}</option>
                {{/each}}
            </select>
        </div>
        <div>
            <label for="post-directions">Directions</label>
            <textarea id="post-directions" name="description">
            </textarea>
            </div>
        <button type="submit" class="btn">Create</button>
    </form>
    </div>
</section>

{{#if recipe.length}}
<section>
    <h2>Your Recipes</h2>
    <ol>
        {{#each recipe as |recipe|}}
        <li>
            {{> post-info recipe}}
            <a href="/dashboard/edit/{{recipe.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>